<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dog_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog" />

    <ImageButton
        android:id="@+id/reload_image_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/dog_image_view"
        app:layout_constraintStart_toStartOf="@+id/dog_image_view"
        app:layout_constraintTop_toBottomOf="@+id/dog_image_view"
        app:srcCompat="@drawable/ic_baseline_refresh"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reload"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/reload_image_button"
        app:layout_constraintStart_toStartOf="@+id/reload_image_button"
        app:layout_constraintTop_toBottomOf="@+id/reload_image_button" />
</androidx.constraintlayout.widget.ConstraintLayout>